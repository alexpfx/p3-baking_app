<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/image_has_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/padding_internal_views"
        android:src="@drawable/ic_videocam_black_24dp"
        android:visibility="invisible"
        />


    <TextView
        android:layout_toRightOf="@id/image_has_video"
        android:id="@+id/text_step_short_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_internal_views"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        tools:text="Finish filling prep"

        />


    <TextView
        android:layout_below="@+id/image_has_video"
        android:id="@+id/text_step_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|start"
        android:gravity="left|center_vertical"
        android:padding="@dimen/padding_internal_views"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="5. Beat the cream cheese and 50 grams (1/4 cup) of sugar on medium speed in a stand mixer or high speed with a hand mixer for 3 minutes. Decrease the speed to medium-low and gradually add in the cold cream. Add in 2 teaspoons of vanilla and beat until stiff peaks form."
        />

</RelativeLayout>